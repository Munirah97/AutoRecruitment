
@{
    ViewBag.Title = "Acceptance Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Masthead-->
<header class="masthead" style="height: min-content">
    <div class="container px-4 px-lg-5 h-50">
        <div class="row gx-4 gx-lg-5 h-50 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">المعهد الوطني للتدريب الصناعي</h1>
                <h2 class="text-white">- اسم البرنامج -</h2>
                <h5 class="text-white">- نموذج الموافقة على القوانين والشروط -</h5>
                <hr class="divider" />
            </div>
        </div>
    </div>
</header>

<!-- Body -->
<div class="container px-4 px-lg-5 pt-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-lg-8 col-xl-6 text-center">
        </div>
    </div>

    <!-- Form -->
    <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
        <div class="col-lg-8 col-md-10">
            <form id="contactForm">

                <p class="m-3" style="color:#f5494c">يرجى مراجعة الشروط قبل الموافقة عليها</p>

                <div class="row gx-4 gx-lg-5 m-1 mb-4">
                    <div class="col-lg-12 p-4 br-15" style="box-shadow: 0 0 20px 0 rgb(0 0 0 / 8%); background-color:#fff;">
                        <div class="ar-text">
                            <div class="row">
                                <div class="col-12">
                                    <h3>القسم الاول: قوانين المعهد</h3>
                                    1. القانون الاول
                                    <br />
                                    2. القانون الثاني
                                    <br />
                                    3. القانون الثالث
                                    <br />
                                    4. القانون الرابع
                                    <br />
                                    <br />

                                    <h3>القسم الثاني: قوانين البرنامج</h3>
                                    1. القانون الاول
                                    <br />
                                    2. القانون الثاني
                                    <br />
                                    3. القانون الثالث
                                    <br />
                                    4. القانون الرابع
                                    <br />

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- AR Lang -->
                <div class="m-3 mt-3">
                    <p>بعد قراءة الشروط ومراجعتها, أُقر انا المتقدم/ـة منيرة أحمد سالم الشهاب بأني: </p>
                    <div class="d-flex">
                        <label class="mycontainer">
                            أوافق عليها
                            <input type="radio" name="accetpance" value="yes">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            لا أوافق عليها
                            <input type="radio" name="accetpance" value="no">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                        
                       
                </div>

                <!-- Submit Button-->
                <div class="text-center">
                    <button class="btn btn-primary btn-xl mt-3 br-15" id="submitButton" type="button">ارسال</button>
                </div>
            </form>
        </div>
    </div>

</div>
