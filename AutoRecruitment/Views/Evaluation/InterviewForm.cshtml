
@{
    ViewBag.Title = "Interview Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Masthead-->
<header class="masthead2" style="height: min-content">
    <div class="container px-4 px-lg-5 h-50">
        <div class="row gx-4 gx-lg-5 h-50 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">المعهد الوطني للتدريب الصناعي</h1>
                <h2 class="text-white">- اسم البرنامج -</h2>
                <h5 class="text-white">- نموذج المقابلة الشخصية -</h5>
                <hr class="divider" />
            </div>
        </div>
    </div>
</header>

<!-- Body -->
<section class="page-section bg-light" id="contact">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
            </div>
        </div>

        <!-- Interview Form -->
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
            <div class="col-lg-8 col-md-10">
                <form id="contactForm">

                    @*<p>رقم الهوية الوطنية <span style="color:#f5494c">*</span> </p>*@
                    <!-- NID input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" style="border-radius:10rem" id="nid" type="number" placeholder="رقم الهوية الوطنية" maxlength="10" oninput="inputMaxLength(this)" onfocusout="vlidateNID(this,'ar')" />
                        <label for="NID">رقم الهوية الوطنية</label>
                        <div id="invalid-nid" class="invalid-feedback mr-3">هذا الحقل مطلوب</div>
                    </div>

                    <div class="row gx-4 gx-lg-5 m-1 mb-4">
                        <div class="col-lg-12 p-4" style="box-shadow: 0 0 29px 0 rgb(0 0 0 / 8%); border-radius:25px;background-color:#fff;">
                            <div class="ar-text">
                                <div class="row">
                                    <div class="col-12">
                                        الاسم الرباعي: --
                                        <br />
                                        العمر: --
                                        <br />
                                        الدرجة العلمية: --
                                        <br />
                                        التخصص: --
                                        <br />

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <p class="m-3">درجة التقييم <span style="color:#f5494c">(1 تعني ضعيف و 5 تعني ممتاز)</span> </p>

                    <!-- AR Lang -->
                    <div class="m-3 mt-3">
                        <p>اللغة العربية <span style="color:#f5494c">*</span></p>

                        <label class="mycontainer">
                            1
                            <input type="radio" checked="checked" name="ar_lang" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2
                            <input type="radio" name="ar_lang" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3
                            <input type="radio" name="ar_lang" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            4
                            <input type="radio" name="ar_lang" value="4">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            5
                            <input type="radio" name="ar_lang" value="5">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!-- Eng Lang -->
                    <div class="m-3 mt-5">
                        <p>اللغة الانجليزية <span style="color:#f5494c">*</span></p>

                        <label class="mycontainer">
                            1
                            <input type="radio" checked="checked" name="eng_lang" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2
                            <input type="radio" name="eng_lang" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3
                            <input type="radio" name="eng_lang" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            4
                            <input type="radio" name="eng_lang" value="4">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            5
                            <input type="radio" name="eng_lang" value="5">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!-- Communication Skill -->
                    <div class="m-3 mt-5">
                        <p>مهارة التواصل <span style="color:#f5494c">*</span></p>

                        <label class="mycontainer">
                            1
                            <input type="radio" checked="checked" name="cominu_skill" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2
                            <input type="radio" name="cominu_skill" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3
                            <input type="radio" name="cominu_skill" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            4
                            <input type="radio" name="cominu_skill" value="4">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            5
                            <input type="radio" name="cominu_skill" value="5">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!-- Health Condition -->
                    <div class="m-3 mt-5">
                        <p>السلامة الجسدية والنفسية <span style="color:#f5494c">*</span></p>

                        <label class="mycontainer">
                            1
                            <input type="radio" checked="checked" name="helth" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2
                            <input type="radio" name="helth" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3
                            <input type="radio" name="helth" value="3">
