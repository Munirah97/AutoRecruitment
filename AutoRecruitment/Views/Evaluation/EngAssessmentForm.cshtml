
@{
    ViewBag.Title = "English Assessment Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        direction:ltr;
        text-align:left;
    }
    table {
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    .form-floating > label {
        top: 0;
        left: 0;
    }

    .form-control.is-invalid {
        padding-right: 4.125rem;
        background-position: right 0.75rem center, center right 2.25rem;
    }

    .checkmark, .checkbox {
        top: 0;
        left: 0;
    }
    .invalid-feedback {
        margin-left: 0.65rem;
    }
</style>
<!-- Masthead-->
<header class="masthead2" style="height: min-content">
    <div class="container px-4 px-lg-5 h-50">
        <div class="row gx-4 gx-lg-5 h-50 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h2 class="text-white font-weight-bold">National Industrial Training Institute</h2>
                <h2 class="text-white">- Program Name -</h2>
                <h5 class="text-white">- English Assessment Form -</h5>
                <hr class="divider" />
            </div>
        </div>
    </div>
</header>


<!-- Body -->
<section class="page-section bg-light" id="contact">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
            </div>
        </div>

        <!-- Interview Form -->
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
            <div class="col-lg-8 col-md-10">
                <form>
                    <!-- NID input-->
                    <div class="form-floating mb-3">
                        <input class="form-control br-15" id="nid" type="number" placeholder="National ID" maxlength="10" oninput="inputMaxLength(this)" onfocusout="vlidateNID(this,'eng')" />
                        <label for="NID">National ID </label>
                        <div id="invalid-nid" class="invalid-feedback">Required</div>
                    </div>

                    <!---------------------- Applicant Info. ---------------------------->
                    <div class="row gx-4 gx-lg-5 m-1 mb-4">
                        <div class="col-lg-12 p-4 br-15" style="box-shadow: 0 0 29px 0 rgb(0 0 0 / 8%);background-color:#fff;">
                            <div class="row">
                                <div class="col-12">
                                    Full Name: --
                                    <br />
                                    Age: --
                                    <br />
                                    Degree: --
                                    <br />
                                    Major: --
                                    <br />

                                </div>
                            </div>
                        </div>
                    </div>

                    <!---------------------- Speaking ---------------------------->
                    <h1 class="text-center">Speaking</h1>
                    <hr class="divider" style="margin:auto" />
                    <div class="d-inline-block" style="width:100%">
                        <p class="mt-3" style="color:#f5494c; font-size:16pt; float:left">Speaking Score</p>
                        <p class="mt-3" style="color:#f5494c; font-size:16pt; float:right"><span class="total_speaking_score">0</span>/15</p>
                    </div>
                    <div class="row text-center">
                        <div class="col-xl-6 " style="border: 1px solid #dddddd">
                            <h3 style="font-size:18pt;">0</h3>
                            <p>Incomprehensible or no response</p>
                        </div>
                        <div class="col-xl-6 " style="border: 1px solid #dddddd">
                            <h3 style="font-size:18pt;">1</h3>
                            <p>
                                Attempts answer and partially addresses topic, some organization, major grammar/word usage errors, many pronunciation/intonation problems, multiple pauses and slow delivery.
                            </p>
                        </div>
                        <div class="col-xl-6 " style="border: 1px solid #dddddd">
                            <h3 style="font-size:18pt;">2</h3>
                            <p>
                                Adequately addresses topic, adequate organization, minor grammar/word usage errors, few pronurlciation/intonation problems, few pauses or delivery issues.
                            </p>
                        </div>
                        <div class="col-xl-6 " style="border: 1px solid #dddddd">
                            <h3 style="font-size:18pt;">3</h3>
                            <p>
                                Completely addresses topic and may extend, where needed. No major grammar or word usage errors. No delivery issues.
                            </p>
                        </div>
                    </div>

                    <!-- Q1 -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Question #1 <span style="color:#f5494c">*</span></h5>
                        <div class="d-flex ">
                            <label class="mycontainer">
                                0
                                <input class="speaking_score" type="radio" checked="checked" name="q1" value="0">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                1
                                <input class="speaking_score" type="radio" name="q1" value="1">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                2
                                <input class="speaking_score" type="radio" name="q1" value="2">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                3
                                <input class="speaking_score" type="radio" name="q1" value="3">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Q2 -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Question #2 <span style="color:#f5494c">*</span></h5>
                        <div class="d-flex ">
                            <label class="mycontainer">
                                0
                                <input class="speaking_score" type="radio" checked="checked" name="q2" value="0">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                1
                                <input class="speaking_score" type="radio" name="q2" value="1">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                2
                                <input class="speaking_score" type="radio" name="q2" value="2">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                3
                                <input class="speaking_score" type="radio" name="q2" value="3">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Q3 -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Question #3 <span style="color:#f5494c">*</span></h5>
                        <div class="d-flex ">
                            <label class="mycontainer">
                                0
                                <input class="speaking_score" type="radio" checked="checked" name="q3" value="0">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                1
                                <input class="speaking_score" type="radio" name="q3" value="1">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                2
                                <input class="speaking_score" type="radio" name="q3" value="2">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                3
                                <input class="speaking_score" type="radio" name="q3" value="3">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Q4 -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Question #4 <span style="color:#f5494c">*</span></h5>
                        <div class="d-flex ">
                            <label class="mycontainer">
                                0
                                <input class="speaking_score" type="radio" checked="checked" name="q4" value="0">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                1
                                <input class="speaking_score" type="radio" name="q4" value="1">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                2
                                <input class="speaking_score" type="radio" name="q4" value="2">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                3
                                <input class="speaking_score" type="radio" name="q4" value="3">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Q5 -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Question #5 <span style="color:#f5494c">*</span></h5>
                        <div class="d-flex ">
                            <label class="mycontainer">
                                0
                                <input class="speaking_score" type="radio" checked="checked" name="q5" value="0">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                1
                                <input class="speaking_score" type="radio" name="q5" value="1">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                2
                                <input class="speaking_score" type="radio" name="q5" value="2">
                                <span class="checkmark"></span>
                            </label>
                            <label class="mycontainer">
                                3
                                <input class="speaking_score" type="radio" name="q5" value="3">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>


                    <!---------------------- Reading ---------------------------->
                    <h1 class="text-center">Reading</h1>
                    <hr class="divider" style="margin:auto" />
                    <div class="d-inline-block" style="width:100%">
                        <p class="mt-3" style="color:#f5494c; font-size:16pt; float:left">Reading Score</p>
                        <p class="mt-3" style="color:#f5494c; font-size:16pt; float:right"><span class="total_reading_score">0</span>/12</p>
                    </div>
                    <!-- Phrasing -->
                    <div class="mt-2 mb-5">
                        <h5 class="font-weight-bold">Phrasing <span style="color:#f5494c">*</span></h5>
                        <label class="mycontainer">
                            0 - Performance does not satisfy the band (1) descriptor
                            <input class="reading_score" type="radio" checked="checked" name="phrasing" value="0">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            1 - The student reads word by word at times or in small chunks and/or the student is monotone.
                            <input class="reading_score" type="radio" name="phrasing" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2 - The student reads in short phrases and does not consistently follow punctuation conventions.
                            <input class="reading_score" type="radio" name="phrasing" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3 - The student reads in longer phrases and mostly follows punctuation conventions.
                            <input class="reading_score" type="radio" name="phrasing" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            4 - The student reads with appropriate phrasing and follows punctuation conventions.
                            <input class="reading_score" type="radio" name="phrasing" value="4">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!-- Accuracy -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Accuracy <span style="color:#f5494c">*</span></h5>
                        <label class="mycontainer pr-0">
                            0 - Performance does not satisfy the band (1) descriptor
                            <input class="reading_score" type="radio" checked="checked" name="accuracy" value="0">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer pr-0">
                            1 - The student has a lot of miscues and seldom self-corrects. The student hesitates, sounds out words letter by letter, and/or makes appeals to the teacher.
                            <input class="reading_score" type="radio" name="accuracy" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer pr-0">
                            2 - The student reads sight words and CVC words correctly, but struggles with more difficult words. The student makes some self-corrections.
                            <input class="reading_score" type="radio" name="accuracy" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer pr-0">
                            3 - The student reads most words correctly. He self-corrects most of the time.
                            <input class="reading_score" type="radio" name="accuracy" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer pr-0">
                            4 - The student reads all or most words correctly. He self-corrects all or most miscues quickly.
                            <input class="reading_score" type="radio" name="accuracy" value="4">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!-- Fluency -->
                    <div class="mt-5 mb-5">
                        <h5 class="font-weight-bold">Fluency <span style="color:#f5494c">*</span></h5>
                        <label class="mycontainer">
                            0 - Performance does not satisfy the band (1) descriptor
                            <input class="reading_score" type="radio" checked="checked" name="fluency" value="0">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            1 - Frequent extended pauses; hesitations, false starts, sound-outs, repetitions, and/or multiple attempts.
                            <input class="reading_score" type="radio" name="fluency" value="1">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            2 - Several "rough spots" in text where extended pauses, hesitations, and so on, are more frequent and disruptive.
                            <input class="reading_score" type="radio" name="fluency" value="2">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            3 - Occasional breaks in smoothness caused by difficulties with specific words and/or structures.
                            <input class="reading_score" type="radio" name="fluency" value="3">
                            <span class="checkmark"></span>
                        </label>
                        <label class="mycontainer">
                            4 - Generally smooth reading with some breaks, but word and structure difficulties are resolved quickly, usually through self-correction.
                            <input class="reading_score" type="radio" name="fluency" value="4">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <!---------------------- Summary ---------------------------->
                    <div class="row gx-4 gx-lg-5 m-1 mb-4 justify-content-center">
                        <div class="col-lg-5 p-4 text-center m-2 br-15" style="box-shadow: 0 0 29px 0 rgb(0 0 0 / 8%); background-color:#fff">
                            <p class="mt-3" style="color:#f5494c; font-size:16pt;">Speaking Score: <span class="total_speaking_score">0</span>/15</p>
                        </div>
                        <div class="col-lg-5 p-4 text-center m-2 br-15" style="box-shadow: 0 0 29px 0 rgb(0 0 0 / 8%); background-color: #fff">
                            <p class="mt-3" style="color:#f5494c; font-size:16pt;">Reading Score: <span class="total_reading_score">0</span>/12</p>
                        </div>
                    </div>

                    <!---------------------- Sign ---------------------------->
                    <div class="row justify-content-center mb-3">
                        <div class="col-10">
                            <label class="mycontainer m-2" style="color:#f5494c;font-weight:bold;">
                                <input type="checkbox">
                                <span class="checkbox"></span>
                                I declare that have understood and adhered to the rubric and grading procedures and that my evaluation provides a fair and accurate representation of the trainee's performance on this assessment.
                            </label>
                        </div>
                    </div>

                    <!-- Submit Button-->
                    <div class="text-center">
                        @*<button class="btn btn-primary btn-xl mt-3" id="submitButton" type="button">ارسال التقييم</button>*@
                        <a class="btn btn-primary btn-xl mt-3 br-15" id="submitButton" href="/Evaluation/ResponsePageEn"> Send</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

