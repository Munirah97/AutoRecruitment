
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminContent/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/AdminContent/css/sb-admin-2.css" rel="stylesheet" />

    <style>
        .container::before {
            content: "";
            background-image: url('../../Content/assets/img/niti-bg2.jpg');
            background-size: cover;
            position: absolute;
            top: 0px;
            right: 0px;
            bottom: 0px;
            left: 0px;
            opacity: 0.75;
        }
        .br-15 {
            border-radius: 15px !important;
        }
    </style>
</head>

<body class="bg-gradient-primary">

    <div class="container">
     
        <!-- Outer Row -->
        <div class="row justify-content-center" style="opacity: 0.94;">

            <div class="col-xl-6 col-lg-8 col-md-11">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0 ">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h5 text-gray-900 mb-2">Welcome Back to</h1>
                                        <h1 class="h3 text-gray-700 mb-5" style="font-weight:700">Recruitment System</h1>

                                        @*<img class="mb-4" src="~/Content/AdminContent/img/RS_Gray.png" style="width:55%" />*@
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user br-15"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user br-15"
                                                   id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember me
                                                </label>
                                            </div>
                                        </div>
                                        <a href="/Admin/index" class="btn btn-primary btn-user btn-block br-15">
                                            Login
                                        </a>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/AdminContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminContent/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/AdminContent/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/AdminContent/js/sb-admin-2.min.js"></script>
</body>

</html>

