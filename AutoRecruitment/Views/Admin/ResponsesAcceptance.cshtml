
@{
    ViewBag.Title = "Acceptance Form Responses";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h2 mb-0 text-gray-700">Acceptance Form Responses</h1>

        <div class=" d-sm-inline-block">
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
            </a>
            <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="/Registration/AcceptanceForm" target="_blank">
                <i class="fas fa-external-link-alt fa-sm text-white-50 mr-1"></i> Form Template
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Tale View -->
        <div id="TableView" style="width: 100%;">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="overflow-x:scroll">
                            <thead>
                                <tr>
                                    <th>Program</th>
                                    <th>Campaign</th>
                                    <th>National ID</th>
                                    <th>Name</th>
                                    <th>Response</th>
                                    <th>Response Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>APNE</td>
                                    <td>Campaign 2021</td>
                                    <td>1012365478</td>
                                    <td>Munirah</td>
                                    <td>Accept</td>
                                    <td>Septemper 23, 2021</td>
                                    <td> <a class="action" role="button" onclick="open_popup('editRecord')">Edit</a> | <a class="action" role="button" onclick="view_log('English Assessment')">Changes Log</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ======= Edit Record ======= -->
<div id="editRecord" class="modal">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-sm-10">
            <div class="modal-content animate">
                <span onclick="close_popup('editRecord')" class="close" title="Close">&times;</span>

                <div class="modal-header-container">
                    <h5>Edit Acceptance Record</h5>
                </div>
                <div class="modal-container">
                    <!-- Form -->
                    <form>
                        <!-- General Info -->
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mt-2">
                                <p class="mb-2">
                                    <i class="fas fa-user fa-1x text-gray-300 mr-1"></i>
                                    <strong>Applicant:</strong> Ahmed Mohammed Bin Ibraheem
                                </p>
                            </div>
                           
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mt-2">
                                <p class="mb-2 d-inline-block">
                                    <i class="fas fa-check-circle fa-1x text-gray-300 mr-1"></i>
                                    <strong>Response:</strong>
                                </p>
                                <div class="d-inline-block">
                                    <select class="form-control pt-0 pb-0">
                                        <option value="" selected>Accept</option>
                                        <option value="">Reject</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <!-- Change justification -->
                        <hr>
                        <h6> <i class="fas fa-question-circle fa-1x text-gray-300 mr-1"></i> Justification </h6>
                        <textarea class="form-control" name="" style="min-height:calc(3.5rem + 2px)" onfocusout="vlidateEmpty(this)"></textarea>
                        <div class="invalid-feedback">You have to specify the reason for your changes.</div>

                        <!-- Buttons -->
                        <div class="row justify-content-center mt-3 mb-3">
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mt-2">
                                <button class="d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right" type="button" style="width:100%">
                                    Save
                                </button>
                            </div>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mt-2">
                                <button class="d-sm-inline-block btn btn-sm btn-primary shadow-sm float-left" type="button" style="width:100%" onclick="close_popup('editRecord')">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>